#!/bin/bash

# Verifica si se proporciona un argumento para el tama単o del zram
if [ -z "$1" ]; then
    echo "Error: Especifica el tama単o del zram (por ejemplo, 2G o 1024M)"
    exit 1
fi

# Tama単o del zram proporcionado como argumento
SIZE="$1"

# Desactiva y reinicia el dispositivo zram
swapoff /dev/zram0
zramctl --reset /dev/zram0

# Configura el tama単o del zram
zramctl --find --size "$SIZE" > /dev/null

# Formatea el zram y lo activa
mkswap /dev/zram0
swapon /dev/zram0
